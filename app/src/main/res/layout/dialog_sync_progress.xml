<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_material_background"
    android:orientation="vertical">

    <cn.lightink.reader.widget.BoldTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dimen2v"
        android:text="@string/sync_progress"
        android:textColor="@color/colorTitle"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen2v"
        android:layout_marginEnd="@dimen/dimen2v"
        android:layout_marginBottom="@dimen/dimen2v"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mSyncProgressDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorContent"
            android:textSize="14sp"
            tools:text="2019 / 4 / 7" />

        <TextView
            android:id="@+id/mSyncProgressChapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen1x"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/colorTitle"
            android:textSize="16sp"
            tools:text="第一章" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenStroke"
        android:background="@color/colorStroke" />

    <cn.lightink.reader.widget.BoldTextView
        android:id="@+id/mSyncProgressButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selected_background"
        android:gravity="center"
        android:padding="@dimen/dimen2x"
        android:text="@string/sync"
        android:textColor="?colorAccent"
        android:textSize="16sp" />

</LinearLayout>