<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.lightink.reader.widget.ImageUriView
        android:id="@+id/mBookCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/mBookOverlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_book_state_checked"
        android:visibility="gone" />

    <cn.lightink.reader.widget.StateImageView
        android:id="@+id/mBookCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="4dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/ic_book_check" />

</RelativeLayout>