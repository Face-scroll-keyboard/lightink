<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_horizontal"
    android:background="@drawable/bg_dialog_round"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mPurifyCreateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="@dimen/padding"
        android:text="@string/purify_create"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mPurifyCreateKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="1.3"
        android:paddingStart="@dimen/padding_horizontal"
        android:paddingEnd="@dimen/padding_horizontal"
        android:text="@string/purify_create_regex_tips"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/mPurifyCreateRegexInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:hint="@string/purify_create_regex_hint"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        android:visibility="gone" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/mPurifyCreateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:hint="@string/purify_create_hint"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mPurifyCreateSubmit"
        style="@style/Lightink.Button.Round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:includeFontPadding="false"
        android:text="@string/save"
        android:textSize="14sp" />

</LinearLayout>