<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mFontSizeForeground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/bg_card_round"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mFontSizeBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2.5dp"
            android:background="@drawable/bg_card_round"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:longClickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mFontSizeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_seek_text"
                android:paddingStart="@dimen/padding"
                android:paddingTop="10dp"
                android:paddingEnd="12dp"
                android:paddingBottom="10dp"
                android:text="@string/reader_setting_font_size"
                android:textSize="12sp" />

            <cn.lightink.reader.widget.FlexSeekBar
                android:id="@+id/mFontSizeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:max="26"
                android:maxHeight="120dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:progressDrawable="@drawable/bg_seek_progress"
                android:splitTrack="false"
                android:thumb="@null" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mFontDistanceForeground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/bg_card_round"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mFontDistanceBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2.5dp"
            android:background="@drawable/bg_card_round"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:longClickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mFontDistanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_seek_text"
                android:paddingStart="@dimen/padding"
                android:paddingTop="10dp"
                android:paddingEnd="12dp"
                android:paddingBottom="10dp"
                android:text="@string/reader_setting_letter_spacing"
                android:textSize="12sp" />

            <cn.lightink.reader.widget.FlexSeekBar
                android:id="@+id/mFontDistanceSeekBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:max="10"
                android:maxHeight="120dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:progressDrawable="@drawable/bg_seek_progress"
                android:thumb="@null" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>